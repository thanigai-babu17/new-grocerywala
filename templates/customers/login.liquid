<section class="register-page padding-bottom padding-top">
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-md-4 col-sm-6 col-12">
              <div id="recover" class="section-title text-center login-title">
                  <h2>{{ 'customer.recover_password.title' | t }}</h2>
              </div>  
              <div class="recover-password form-wrapper">
                  {%- form 'recover_customer_password' -%}
                      <div class="form-container"><div class="form-heading"><h4 class="recover-content">{{ 'customer.recover_password.subtext' | t }}</h4></div></div>
                      <div class="form-container form-error">
                          {% assign recover_success = form.posted_successfully? %}
                          {%- if form.errors -%}
                              <small id="RecoverEmail-email-error" class="form__message">
                                  <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13" width="20" height= "20">
                                      <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                                      <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                                      <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                                      <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                                  </svg>
                                  {{ form.errors.messages['form'] }}
                              </small>
                          {%- endif -%}
                          <div class="field">
                              <input type="email" value="" name="email" id="RecoverEmail" autocorrect="off" autocapitalize="off" autocomplete="email" {% if form.errors %} aria-invalid="true"
                              aria-describedby="RecoverEmail-email-error" autofocus {% endif %} placeholder="{{ 'customer.login_page.email' | t }}">
                          </div>
                      </div>
                      <div class="form-container">
                          <button class="btn btn--primary btn--lg">{{ 'customer.login_page.submit' | t }}</button>
                          <a href="#login" class="btn btn--secondary btn--lg">{{ 'customer.login_page.cancel' | t }}</a>
                      </div>
                  {%- endform -%}
              </div> 
              <div class="form-wrapper">
                  {%- if recover_success == true -%}
                      <span class="form-message-success" tabindex="-1" autofocus>
                          <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13" width= "20" height="20">
                              <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
                              <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
                              <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
                          </svg>
                          {{ 'customer.recover_password.success' | t }}
                      </span>
                  {%- endif -%}
                  {%- form 'customer_login', class: 'login-form', novalidate: 'novalidate' -%}
                      <div class="form-container">
                          <div class="form-heading">
                              <h4>{{ 'customer.login_page.title' | t }}</h4>
                          </div>
                      </div>                            
                      {%- if form.errors -%}
                          <div class="form-container form-error">
                              <div class="form__message" tabindex="-1" autofocus>
                                  <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
                                  <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13" width="20" height="20" >
                                  <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                                  <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                                  <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                                  </svg>
                                  {{ 'templates.contact.form.error_heading' | t }}
                              </div>
                              {{ form.errors | default_errors }}
                          </div>
                      {%- endif -%}
                      <div class="form-container">
                          <div class="row"> 
                              <div class="col-12">
                                  <div class="field form-group">
                                      <label>E-mail<sup aria-hidden="true">*</sup>:</label>
                                      <input class="form-control" type="email" name="customer[email]" id="CustomerEmail" autocomplete="email" autocorrect="off" autocapitalize="off"
                                      {% if form.errors contains 'form' %} aria-invalid="true" {% endif %} placeholder="{{ 'customer.login_page.email' | t }}">
                                  </div>
                              </div>
                              {%- if form.password_needed -%}
                                  <div class="col-12">
                                      <div class="form-group field">
                                          <label>Password<sup aria-hidden="true">*</sup>:</label>
                                          <input
                                          class="form-control"
                                          type="password"
                                          value=""
                                          name="customer[password]"
                                          id="CustomerPassword"
                                          autocomplete="current-password"
                                          {% if form.errors contains 'form' %}
                                          aria-invalid="true"
                                          {% endif %}
                                          placeholder="{{ 'customer.login_page.password' | t }}">
                                          <a href="#recover" class="forgot-pass">Forgot Password?</a>
                                      </div>
                                  </div> 
                              {% endif %}
                          </div>
                          {%- if form.password_needed -%}
                            <button class="btn btn--primary btn--lg btn--full" type="submit">Login</button>
                          {% endif %}
                          <div class="text-center" style="margin-top: 12px;">
                            <span class="reg-lbl">If you dont have account <a href="{{ routes.account_register_url }}" type="submit" style="text-decoration: underline;color:var(--grey-800);">Register</a></span>
                          </div>
                      </div>
                  {%- endform -%}
              </div>
          </div>
      </div>
  </div> 
</section>