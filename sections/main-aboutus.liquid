      "id": "desc1",
      "label": "t:settings_schema.about.desc2"
    },
    {
      "type": "header",
      "content": "t:settings_schema.about.s_two"
    },
    {
      "type": "text",
      "id": "m_title",
      "label": "t:settings_schema.about.m_title"
    },
    {
      "type": "header",
      "content": "t:settings_schema.about.p_one"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "t:settings_schema.common.settings.title"
    },
    {
      "type": "textarea",
      "id": "desc_1",
      "label": "t:settings_schema.about.desc1"
