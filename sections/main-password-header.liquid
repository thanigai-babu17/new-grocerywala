<div class="container"> 
  <div class="password-header">
    {%- if section.settings.logo != blank -%}
      {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
      {{ section.settings.logo | image_url: width: section.settings.logo.width | image_tag:
        class: 'password-logo', alt: logo_alt }}
    {%- else -%}
      <h2>{{ shop.name }}</h2>
    {%- endif -%}

    {%- if shop.password_message != blank -%}
      <div class="password-content">
        {{ shop.password_message }}
      </div>
    {%- endif -%}
    <password-modal>
      <details class="password-modal modal">
        <summary class="modal__toggle" aria-haspopup="dialog">
          <h5 class="modal__toggle-open password-link link underlined-link">
            <svg aria-hidden="true" focusable="false" class="icon icon-padlock" role="presentation" viewBox="0 0 16 21" fill="none" width="20" height="20">
              <path fill-rule="evenodd" d="M5.03 1.79A3.73 3.73 0 018 .5c1.28 0 2.28.48 2.97 1.29.67.8 1 1.87 1.03 3V7.5h3c.28 0 .5.22.5.5v12a.5.5 0 01-.5.5H1a.5.5 0 01-.5-.5V8c0-.28.22-.5.5-.5h3V4.8c0-1.1.36-2.15 1.03-3.01zM11 6.4v1.09H5V4.82c.03-.99.31-1.82.8-2.4A2.75 2.75 0 018 1.49c1.01 0 1.73.37 2.2.93.49.58.77 1.41.8 2.4V6.4zM1.5 8.49v11h13v-11h-13zm6.51 2.5a1.5 1.5 0 00-.7 2.82v2.5a.68.68 0 001.36 0v-2.47A1.5 1.5 0 008 11l.01-.01z" clip-rule="evenodd" fill="currentColor" />
            </svg>
            {{ 'general.password_page.login_password_button' | t }}
          </h5>
        </summary>
        <div class="modal__content" role="dialog" aria-labelledby="DialogHeading" aria-modal="true">
          <div class="password-modal__content" tabindex="-1">
            <button type="button" class="modal__close-button link" aria-label="{{ 'accessibility.close' | t }}">
             <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" fill="none" viewBox="0 0 18 17" width="20" height="20">
              <path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z" fill="currentColor">
            </svg>
            </button>
            <h3 class="password-modal__content-heading" id="DialogHeading">
              {{ 'general.password_page.login_form_heading' | t }}
            </h3>
            {%- form 'storefront_password', class: 'password-form' -%}
              <div class="password-field field{% if form.errors %} password-field--error{% endif %}">
                <input type="password" name="password" id="Password" class="field__input" autocomplete="current-password"
                {% if form.errors %} aria-invalid="true" aria-describedby="PasswordLoginForm-password-error"{%- endif -%} placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
                {%- if form.errors -%}
                  <div id="PasswordLoginForm-password-error" role="status">
                    <span class="form__message">{{ 'general.password_page.login_form_error' | t }}</span>
                  </div>
                {%- endif -%}
              
              </div>
              <button name="commit" class="btn">{{ 'general.password_page.login_form_submit' | t }}</button>
            {%- endform -%}
            <p class="password__footer-text">{{ 'general.password_page.admin_link_html' | t }}</p>
          </div>
        </div>
      </details>
    </password-modal>
  </div>
 </div> 

{% schema %}
{
  "name": "Password Header",
  "tag": "header",
  "class": "password_header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:settings_schema.header.settings.logo_img"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "px",
      "label": "t:settings_schema.header.settings.logo_wd"
    }
  ]
}
{% endschema %}