<style>
  .our-expertise__grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 32px;
  }

  .our-expertise__card {
    padding: 18px;
    border: 1px solid #f2f2f2;
    border-radius: 8px;
    display: flex;
    gap: 12px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .our-expertise__card-img {
    aspect-ratio: 1/1;
    width: 56px;
  }

  .our-expertise__card-content {
    max-width: 300px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
  }

  .our-expertise__card-content h4 {
    font-size: 20px;
    line-height: 1.2;
    font-weight: 700;
  }

  .our-expertise__card-content p {
    font-size: 16px;
    line-height: 1.3;
  }

  @media screen and (max-width: 998px) {
    .our-expertise__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media screen and (max-width: 600px) {
    .our-expertise__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="our-expertise">
  <div class="container">
    <h2 class="our-expertise__title section-title  text-center">
      {{ section.settings.title }}
    </h2>
    <div class="our-expertise__grid">
      {% for block in section.blocks %}
        {% if block.type == 'expertise' %}
          <div class="our-expertise__card">
            <img
              src="{{ block.settings.expertise_icon |  img_url: 'master' }}"
              alt="{{ block.settings.expertise_icon.alt }}"
              class="our-expertise__card-img"
              loading="eager"
            >
            <div class="our-expertise__card-content">
              <h4>{{ block.settings.title }}</h4>
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Our Expertise",
  "class": "padding-bottom background-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    }
  ],
  "blocks": [
    {
      "type": "expertise",
      "name": "Expertise",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Expertise Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Expertise Description"
        },
        {
          "type": "image_picker",
          "label": "Expertise Icon",
          "id": "expertise_icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Expertise"
    }
  ]
}
{% endschema %}
